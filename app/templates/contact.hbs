<div class="t-contact">
    <h1> {{contactTitle}} </h1>

    {{#unless isMsgSent}}
        <div class="form-horizontal form-group form-group-lg row">
            <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
              {{input type="email" value=emailAddress class="form-control" placeholder="Please type your e-mail address." autofocus="autofocus"}}
            </div>

            <div class="col-xs-10 col-xs-offset-1 col-sm-6 col-sm-offset-1 col-md-5 col-md-offset-2">
              {{input type="text" value=contactMessage class="form-control" placeholder=contactTitle autofocus="autofocus"}}
            </div>

            <div class="col-xs-10 col-xs-offset-1 col-sm-offset-0 col-sm-4 col-md-3">
                <button class="btn btn-primary btn-lg btn-block" disabled={{isSendDisabled}} {{action 'sendMessage'}}>Send</button>
            </div>
        </div>
    {{else}}
        <div class="alert alert-success">{{responseMsg}}</div>
        <a class="btn btn-secondary" {{action 'sendAgain'}}>{{secondaryContactMsg}}</a>
    {{/unless}}
</div>